{
    "compilerOptions": {
        /* Base Options: */
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2022",
        "resolveJsonModule": true,
        "isolatedModules": true,

        /* Strictness */
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,

        /* Build for a library */
        "module": "ESNext",
        "moduleResolution": "node",
        "outDir": "dist",
        "sourceMap": true,
        "declaration": true,
        "erasableSyntaxOnly": false,

        /* Other */
        "forceConsistentCasingInFileNames": true,
        "lib": ["es2022", "dom"],
        "types": ["bun-types"]
    }
}
